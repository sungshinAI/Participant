<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElevenActivity">

    <Button
        android:id="@+id/btnc_1"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonround"
        android:backgroundTint="#338833FF"
        android:gravity="center"
        android:text="1.  8월 24일 09시~16시"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnc_2"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/buttonround"
        android:backgroundTint="#338833FF"
        android:gravity="center"
        android:text="2.  8월 26일 17시~22시"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnc_1" />

    <Button
        android:id="@+id/btnc_3"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/buttonround"
        android:backgroundTint="#338833FF"
        android:gravity="center"
        android:text="3.  8월 30일 18시~20시"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnc_2" />

</androidx.constraintlayout.widget.ConstraintLayout>